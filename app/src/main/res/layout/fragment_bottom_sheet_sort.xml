<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/tv_sort_padding"
        android:text="@string/sort_by"
        android:textSize="@dimen/fragment_bottomSheet_textSizeTitle" />

    <View
        android:id="@+id/sort_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/sort_line_view_margin"
        android:layout_marginEnd="@dimen/sort_line_view_margin"
        android:background="@color/light_grey"
        android:padding="@dimen/sort_line_view_padding" />

    <RadioGroup
        android:id="@+id/radioGroup_sort_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/radioGroup_padding">

        <RadioButton
            android:id="@+id/rb_default_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:text="@string/sort_by_default" />

        <RadioButton
            android:id="@+id/rb_distance_sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:text="@string/sort_by_distance" />

        <RadioButton
            android:id="@+id/rb_number_free_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:text="@string/sotr_by_number_of_rooms" />

    </RadioGroup>
</LinearLayout>